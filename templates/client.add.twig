<div class="container">

	<div class="row">

		<div class="col-xs-12">

			<h2>Ny kund</h2>

			<form action="/client/save/" class="form" method="post">

				<input type="hidden" name="redirect_url" id="redirect_url" value="{{http_referer}}" />

				<div class="form-group">

					<label for="name">Namn</label>
					<input type="text" class="form-control req" name="name" id="name" placeholder="Ex: Länsförsäkringar Bergslagen" />

				</div>

				<div class="form-group">

					<label for="user_id">Användare</label>
					<select class="form-control custom-select" name="user_id" id="user_id">
						<option value="0">Välj ur listan</option>
						{% for user in users if not user.admin %}
							<option value="{{user.id}}">{{user.name}}</option>
						{% endfor %}
					</select>

				</div>

				<div class="form-group">

					<input type="submit" class="btn btn-primary p-x" value="Spara" />

				</div>

			</form>

		</div>

	</div>

</div>