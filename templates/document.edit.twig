<div class="container">

	<div class="row">

		<div class="col-xs-12">

			<h2>Dokument för {{project.name}}</h2>

			<form action="/document/update/" class="form" method="post">

				<input type="hidden" name="redirect_url" id="redirect_url" value="{{http_referer}}" />

				<input type="hidden" name="id" id="id" value="{{project.id}}" />

				<div class="form-group">

					<label for="info">Generell information</label>
					<textarea class="form-control" name="info" id="info">{{document.info}}</textarea>

				</div>

				<div class="row m-t m-b">

					<div class="col-xs-12">

						<div class="hr-divider">

							<h3 class="hr-divider-content hr-divider-heading">Kontaktpersoner</h3>

						</div>

						<button type="button" class="btn btn-sm btn-primary-outline get-modal" data-modal-body="new-contact" data-modal-title="Lägg till kontaktperson">Lägg till</button>

					</div>

					<div class="col-xs-12 m-t m-b">

						<div class="table-responsive">

							<table class="table" id="contact-table">
							
								<thead>
									<tr>
										<th>Namn</th>
										<th>Roll</th>
										<th>E-post</th>
										<th>Telefon</th>
									</tr>
								</thead>

								<tbody>

									<tr class="no-tr">

										<td>Inga kontakter</td>
										<td></td>
										<td></td>
										<td></td>

									</tr>

								</tbody>

							</table>

						</div>

					</div>

				</div>

				<div class="row m-b">

					<div class="col-xs-12 col-sm-6">

						<div class="hr-divider">

							<h3 class="hr-divider-content hr-divider-heading">Kampanjstart</h3>

						</div>

						<div class="input-with-icon m-t">
							
							<input type="text" value="ÅÅÅÅ-MM-DD" class="form-control" data-provide="datepicker">
							<span class="icon icon-calendar"></span>

						</div>

					</div>

				</div>

				<div class="form-group">

					<input type="submit" class="btn btn-primary" value="Spara" />

				</div>

			</form>

		</div>

	</div>

</div>